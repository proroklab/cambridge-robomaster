[Unit]
Description=Emergency Stop
After=systemd-user-sessions.service

[Service]
WorkingDirectory=/home/ubuntu/
User=root
ExecStart=/bin/bash -c "source /home/ubuntu/emergency_stop/install/setup.bash && export ROS_DOMAIN_ID=0 && export RMW_IMPLEMENTATION=rmw_cyclonedds_cpp && ros2 run emergency_stop emergency_stop_button"
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

